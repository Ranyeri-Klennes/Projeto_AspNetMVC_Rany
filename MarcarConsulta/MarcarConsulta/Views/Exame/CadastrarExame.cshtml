@model MarcarConsulta.Models.Exame

@{
    ViewData["Title"] = "CadastrarExame";
}

<h1>Novo Exame</h1>

<h4>Cadastrar Exame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarExame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <input asp-for="Obs" class="form-control" />
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoExameId" class="control-label"></label>
                <input asp-for="TipoExameId" class="form-control" />
                <span asp-validation-for="TipoExameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
